{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": [
        "apps/*"
      ]
    },
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
